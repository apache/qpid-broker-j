                    <systemPath>${tck.directory}/lib/tsharness.jar</systemPath>
                </dependency>
                <dependency>
                    <groupId>oracle-jms-tck2</groupId>
                    <artifactId>javatest</artifactId>
                    <version>0</version>
                    <scope>system</scope>
