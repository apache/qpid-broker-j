{
  "name" : "${broker.name}",
  "modelVersion" : "8.0",
  "authenticationproviders" : [ {
    "name" : "plain",
    "type" : "Plain",
    "secureOnlyMechanisms" : [],
    "users" : [ {
      "name" : "admin",
      "type" : "managed",
      "password" : "admin"
    }, {
      "name" : "guest",
      "type" : "managed",
      "password" : "guest"
    } ]
  } ],
  "brokerloggers" : [ {
    "name" : "logsocket",
    "type" : "Console",
    "brokerloginclusionrules" : [ {
      "name" : "Root",
      "type" : "NameAndLevel",
      "level" : "INFO",
      "loggerName" : "ROOT"
    }, {
      "name" : "Qpid",
      "type" : "NameAndLevel",
      "level" : "DEBUG",
      "loggerName" : "org.apache.qpid.*"
    }, {
      "name" : "Operational",
      "type" : "NameAndLevel",
      "level" : "INFO",
      "loggerName" : "qpid.message.*"
    }, {
      "name" : "Statistics",
      "type" : "NameAndLevel",
      "level" : "INFO",
      "loggerName" : "qpid.statistics.*"
    } ]
  } ],
  "ports" : [ {
    "name" : "AMQP",
    "type" : "AMQP",
    "authenticationProvider" : "plain",
    "port" : "${qpid.amqp_port}",
    "allowConfidentialOperationsOnInsecureChannels": true,
    "virtualhostaliases" : [ {
      "name" : "defaultAlias",
      "type" : "defaultAlias"
    }, {
      "name" : "hostnameAlias",
      "type" : "hostnameAlias"
    }, {
      "name" : "nameAlias",
      "type" : "nameAlias"
    } ]
  } ],
  "virtualhostnodes" : []
}
